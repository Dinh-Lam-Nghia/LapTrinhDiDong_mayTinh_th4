<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="3pt"
    android:background="#6b6b6d"
    android:backgroundTint="#6b6b6d"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context="com.example.calculator_app.MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6B6B6D"
        android:duplicateParentState="true"
        android:ems="10"
        android:gravity="right"
        android:hint="0"
        android:inputType="textPersonName"
        android:paddingTop="100pt"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button19"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buClean"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buplusMinuesr"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button17"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/budiv"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:backgroundTint="#ff973a"
                android:onClick="buOpEevent"
                android:text="/"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:backgroundTint="#ff973a"
                android:onClick="buOpEevent"
                android:text="X"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:backgroundTint="#ff973a"
                android:onClick="buOpEevent"
                android:text="-"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:backgroundTint="#ff973a"
                android:onClick="buOpEevent"
                android:text="+"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="65pt"
            android:layout_height="30pt"
            android:layout_marginRight="3pt"
            android:layout_weight="1"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="24sp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="3pt"
            android:layout_weight="1"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="3pt"
            android:layout_weight="1"
            android:backgroundTint="#ff973a"
            android:onClick="buEqualEvent"
            android:text="="
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>